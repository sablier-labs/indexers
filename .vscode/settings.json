{
  "biome.enabled": true,
  "editor.codeActionsOnSave": {
    "quickfix.biome": "always",
    "source.organizeImports.biome": "always"
  },
  "[graphql][javascript][json][jsonc][typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[md][yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.associations": {
    "src/graph/**/*.ts": "assemblyscript"
  },
  "search.exclude": {
    "**/_generated": true,
    "**/bindings": true,
    "**/deprecated": true,
    "**/manifests/**/*.yaml": true,
    "**/node_modules": true,
    "**/src/graph/lockup/bindings": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "asls.include": ["src/the-graph/**/*.ts", "src/the-graph/*.ts"]
}
