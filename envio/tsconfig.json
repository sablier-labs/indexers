{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../node_modules/@sablier/devkit/tsconfig/base.json",
  // Envio doesn't work with ESM .js imports
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "Node"
    },
    "transpileOnly": true
  },
  "exclude": ["**/bindings/", "node_modules/"],
  "include": ["airdrops/", "analytics/", "common/", "flow/", "lockup/"]
}
