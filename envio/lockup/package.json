{
  "name": "@indexers/envio-lockup",
  "description": "Envio indexer for Sablier Lockup",
  "version": "1.0.0",
  "author": {
    "name": "Sablier Labs Ltd",
    "url": "https://sablier.com"
  },
  "bugs": {
    "url": "https://github.com/sablier-labs/indexers/issues"
  },
  "config": {
    "dir_source": "../../constants/src",
    "dir_chains": "src/_generated/original",
    "dir_compiled": "src/_generated/compiled",
    "dir_generated": "src/_generated"
  },
  "dependencies": {
    "@biomejs/biome": "1.9.4",
    "@glennsl/rescript-fetch": "^0.2.3",
    "@rescript/react": "^0.13.1",
    "@types/jest": "^29.5.14",
    "@types/node": "22.15.3",
    "envio": "2.18.0",
    "graphql-request": "^6.1.0",
    "jest": "^29.7.0",
    "mustache": "^4.2.0",
    "prettier": "^3.5.3",
    "rescript-envsafe": "^5.0.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.2",
    "ts-node": "10.9.1",
    "typescript": "5.5.2",
    "viem": "2.28.1"
  },
  "homepage": "https://github.com/sablier-labs/indexers#readme",
  "license": "LGPL-3.0",
  "private": true,
  "repository": {
    "directory": "envio/lockup",
    "type": "git",
    "url": "https://github.com/sablier-labs/indexers.git"
  },
  "scripts": {
    "biome:check": "biome check .",
    "biome:write": "biome check --write .",
    "clean": "rimraf tsconfig.tsbuildinfo config.yaml build generated $npm_package_config_dir_generated",
    "clean-generated": "rimraf $npm_package_config_dir_generated && rimraf generated",
    "clean-modules": "rimraf node_modules",
    "codegen": "envio codegen",
    "dev": "MAX_BATCH_SIZE=1 && bun run setup && bun run envio dev",
    "prettier:check": "prettier --check --cache --ignore-path ../../.prettierignore \"**/*.{md,yaml,yml}\"",
    "prettier:write": "prettier --write --cache --ignore-path ../../.prettierignore --log-level warn \"**/*.{md,yaml,yml}\"",
    "setup": "bun run clean && bun run template && bun run codegen",
    "start": "ts-node generated/src/Index.bs.js",
    "template": "bun run template-move && bun run template-chain && bun run template-config",
    "template-chain": "tsc $npm_package_config_dir_chains/bundles/lockup-envio.ts --outDir $npm_package_config_dir_compiled",
    "template-config": "mustache $npm_package_config_dir_compiled/bundles/lockup-envio.js config.template.mustache > config.yaml",
    "template-move": "mkdir $npm_package_config_dir_generated && cp -R $npm_package_config_dir_source $npm_package_config_dir_chains",
    "test": "bun run jest --verbose",
    "tsc:check": "tsc --noEmit"
  }
}
