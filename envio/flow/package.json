{
  "name": "@sablier/indexers-envio-flow",
  "description": "Envio indexer for Sablier Flow",
  "version": "1.0.0",
  "author": {
    "name": "Sablier Labs Ltd",
    "url": "https://sablier.com"
  },
  "bugs": {
    "url": "https://github.com/sablier-labs/indexers/issues"
  },
  "config": {
    "dir_source": "../../constants/src",
    "dir_chains": "src/_generated/original",
    "dir_compiled": "src/_generated/compiled",
    "dir_generated": "src/_generated"
  },
  "dependencies": {
    "envio": "2.18.0",
    "viem": "2.28.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "4.1.0",
    "@types/jest": "^29.5.14",
    "@types/mocha": "10.0.10",
    "@types/node": "22.15.3",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.0",
    "graphql-request": "^6.1.0",
    "jest": "^29.7.0",
    "mustache": "^4.2.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.2",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  },
  "homepage": "https://github.com/sablier-labs/indexers#readme",
  "license": "LGPL-3.0",
  "private": true,
  "repository": {
    "directory": "envio/flow",
    "type": "git",
    "url": "https://github.com/sablier-labs/indexers.git"
  },
  "scripts": {
    "clean": "rimraf tsconfig.tsbuildinfo config.yaml build generated $npm_package_config_dir_generated",
    "clean-generated": "rimraf $npm_package_config_dir_generated && rimraf generated",
    "clean-modules": "rimraf node_modules",
    "codegen": "envio codegen",
    "dev": "MAX_BATCH_SIZE=1 && bun run setup && bun run envio dev",
    "lint-check": "eslint --ignore-path ../../.eslintignore .",
    "lint-fix": "eslint --fix --ignore-path ../../.eslintignore .",
    "prettier-check": "bun run prettier --check --cache --config ../../.prettierrc.yml --ignore-path ../../.prettierignore .",
    "prettier-fix": "bun run prettier --write --cache --config ../../.prettierrc.yml --ignore-path ../../.prettierignore --log-level warn .",
    "setup": "bun run clean && bun run template && bun run codegen",
    "start": "ts-node generated/src/Index.bs.js",
    "template": "bun run template-move && bun run template-chain && bun run template-config",
    "template-chain": "tsc --skipLibCheck $npm_package_config_dir_chains/bundles/flow-envio.ts --outDir $npm_package_config_dir_compiled",
    "template-config": "mustache $npm_package_config_dir_compiled/bundles/flow-envio.js config.template.mustache > config.yaml",
    "template-move": "mkdir $npm_package_config_dir_generated && cp -R $npm_package_config_dir_source $npm_package_config_dir_chains",
    "test": "bun run jest --verbose",
    "type-check": "tsc --noEmit"
  }
}
