{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(just:*)",
      "Bash(ls:*)",
      "Bash(pnpm add:*)",
      "Bash(pnpm install)",
      "WebFetch(domain:envio.dev)",
      "WebFetch(domain:raw.githubusercontent.com)"
    ],
    "deny": ["Bash(just deploy:*)"]
  },
  "extraKnownMarketplaces": {
    "envio-plugins": {
      "source": {
        "source": "github",
        "repo": "enviodev/envio-plugins"
      }
    }
  },
  "enabledPlugins": {
    "envio-hyperindex@envio-plugins": true
  }
}
