{
  "name": "@sablier/indexers",
  "description": "EVM data indexers for the Sablier Protocol",
  "version": "1.0.0",
  "author": {
    "name": "Sablier Labs Ltd",
    "url": "https://sablier.com"
  },
  "bugs": {
    "url": "https://github.com/sablier-labs/indexers/issues"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1"
  },
  "homepage": "https://github.com/sablier-labs/indexers#readme",
  "license": "LGPL-3.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sablier-labs/indexers.git"
  },
  "scripts": {
    "all": "bun run --filter '*'",
    "biome:check": "biome check .",
    "biome:write": "biome check --write .",
    "g:biome:check": "bun run all biome:check",
    "g:biome:write": "bun run all biome:write",
    "g:clean": "bun run all clean",
    "g:clean-modules": "bun run all clean-modules && rimraf node_modules",
    "g:full:check": "bun run g:biome:check && bun run g:prettier:check",
    "g:full:fix": "bun run g:biome:fix && bun run g:prettier:fix",
    "graph-auth": "graph auth --product hosted-service",
    "prettier:check": "prettier --cache --check \"**/*.{md,yaml,yml}\"",
    "prettier:write": "prettier --cache --write --log-level warn \"**/*.{md,yaml,yml}\""
  },

  "workspaces": ["envio/*", "the-graph/*"]
}
