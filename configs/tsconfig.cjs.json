{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    // Emit real CJS while avoiding NodeNext's forced ESM pairing.
    "module": "CommonJS",
    // Use legacy Node resolution so TS doesn't force module=NodeNext/Node16.
    "moduleResolution": "Node10",
    // Resolve sablier subpath exports under Node10 by mapping directly to published types.
    "baseUrl": "..",
    "paths": {
      "sablier/evm": ["node_modules/sablier/dist/types/evm/index.d.ts"],
      "sablier/evm/*": ["node_modules/sablier/dist/types/evm/*/index.d.ts"]
    },
    // Downlevel ESM syntax to CJS.
    "verbatimModuleSyntax": false,
    "outDir": "../dist/cjs"
  }
}
