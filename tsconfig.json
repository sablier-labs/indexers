{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "noImplicitAny": true,
    "paths": {
      "@envio-airdrops/*": ["src/envio/airdrops/*"],
      "@envio-common/*": ["src/envio/common/*"],
      "@envio-flow/*": ["src/envio/flow/*"],
      "@envio-lockup/*": ["src/envio/lockup/*"],
      "@src": ["src"],
      "@src/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["src/envio/**/bindings.ts", "src/graph/**/*.ts"],
  "include": ["src/**/*.ts", "scripts/**/*.ts", "tests/**/*.ts"]
}
