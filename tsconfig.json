{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "module": "CommonJS",
    "noImplicitAny": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "rootDirs": ["src", "generated"],
    "strict": true,
    "target": "ES2020",
    "skipLibCheck": true
  },
  "exclude": ["./generated", "**/node_modules"],
  "include": ["**/*.ts"]
}
